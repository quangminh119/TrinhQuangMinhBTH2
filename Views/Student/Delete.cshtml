@model TrinhQuangMinhBTH2.Models.Student
@{ViewData["title"] = "Delete";
}
<h3>Bạn có muốn xóa thông tin sinh viên</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty!.FacultyName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty!.FacultyName)
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StudentID" />
    <input type="submit" class="btn btn-danger" value="Delete" />
    <a class="btn btn-success" asp-action="Index">Danh sách sinh viên</a>
</form>